<h1>Listing Artists</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= image_tag artist.avatar.url(:thumb) %></td>
        <td><%= link_to 'Show', artist, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?'  }, class: "btn btn-default btn-xs"  %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, class: "btn btn-default btn-xs" %>


